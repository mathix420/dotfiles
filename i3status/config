general {
    output_format = "i3bar"
    colors = true
    interval = 5
}

order += "memory"
order += "cpu_usage"
order += "disk /"
order += "wireless wlan0"
#order += "ethernet lo"
order += "battery all"
order += "tztime local"

wireless wlan0 {
    format_up = "W: (%quality at %essid, %bitrate) %ip"
    format_down = "W: down"
}

ethernet lo {
    # if you use %speed, i3status requires the cap_net_admin capability
    format_up = "E: %ip (%speed)"
    format_down = "E: down"
}

battery all {
    format = "%status %percentage %remaining"
    format_down = "No battery"
    status_chr = "CHR"
    status_bat = "BAT"
    status_unk = "UNK"
    status_full = "FULL"
    path = "/sys/class/power_supply/BAT%d/uevent"
    low_threshold = 20
}

tztime local {
    format = "%Y-%m-%d %H:%M"
    timezone = "Europe/Paris"
}

memory {
	format = "RAM %percentage_used"
    threshold_degraded = "10%"
	threshold_critical = "5%"
    format_degraded = "ðŸš¨ RAM %percentage_used ðŸš¨"
}

cpu_usage {
	format = "CPU %usage"
	max_threshold = "90"
	format_above_threshold = "ðŸš¨ CPU %usage ðŸš¨"
	degraded_threshold = "80"
	format_above_degraded_threshold = "â˜£ CPU %usage â˜£"
}

disk "/" {
    format = "DISK %free"
}
